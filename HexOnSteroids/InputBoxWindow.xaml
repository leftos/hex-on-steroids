<Window x:Class="HexOnSteroids.InputBoxWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Hex on Steroids" Height="164" Width="427"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="pack://siteoforigin:,,,/NBA 2K12.ico">
    <Grid>
        <Label Content="Message" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lblMessage"
               VerticalAlignment="Top" Padding="0,5,0,0" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,46,0,0" Name="txtInput" VerticalAlignment="Top"
                 Width="381" />
        <Button Content="OK" Height="23" Margin="0,90,93,0" Name="btnOK" VerticalAlignment="Top" Click="btnOK_Click"
                IsDefault="True" HorizontalAlignment="Right" Width="75" />
        <Button Content="Cancel" Height="23" IsDefault="False" Margin="0,90,12,0" Name="btnCancel"
                VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="btnCancel_Click" />
    </Grid>
</Window>